<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OefKleding"
    android:background="#f2bfa2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Klik op een onderdeel"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#3b42ca"
            android:textSize="20dp"
            android:gravity="center" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="0.25"
            android:baselineAligned="false"
            android:gravity="center">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp">
            <ImageView
                android:layout_width="230dp"
                android:layout_height="500dp"
                android:id="@+id/imageView"
                android:background="@drawable/kleding1"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/relativeLayout"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoep"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="SchoenClick"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/buttonLantaarnpaal"
                    android:layout_alignStart="@+id/buttonLantaarnpaal" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonVoetganger"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="JurkClick"
                    android:layout_alignBaseline="@+id/buttonLantaarnpaal"
                    android:layout_alignBottom="@+id/buttonLantaarnpaal"
                    android:layout_toRightOf="@+id/buttonFietser"
                    android:layout_toEndOf="@+id/buttonFietser" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonLantaarnpaal"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="BroekClick"
                    android:layout_above="@+id/buttonFietser"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonFietser"
                    android:onClick="KindClick"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:layout_above="@+id/buttonStoep"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="27dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoplicht"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="OverhemdClick"
                    android:layout_above="@+id/buttonVoetganger"
                    android:layout_toRightOf="@+id/buttonBoom"
                    android:layout_toEndOf="@+id/buttonBoom"
                    android:layout_marginBottom="26dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonBoom"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="BabyClick"
                    android:layout_above="@+id/buttonStoplicht"
                    android:layout_alignLeft="@+id/buttonLantaarnpaal"
                    android:layout_alignStart="@+id/buttonLantaarnpaal" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonMan"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="ManClick"
                    android:layout_alignBaseline="@+id/buttonBoom"
                    android:layout_alignBottom="@+id/buttonBoom"
                    android:layout_toRightOf="@+id/buttonBoom"
                    android:layout_toEndOf="@+id/buttonBoom" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonVrouw"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="VrouwClick"
                    android:layout_below="@+id/buttonMan"
                    android:layout_toRightOf="@+id/buttonStoplicht"
                    android:layout_toEndOf="@+id/buttonStoplicht" />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0.25">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:onClick="TerugClick"
                    android:padding="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:id="@+id/dutchword"
                    android:padding="5dp"
                    android:layout_weight="0.06"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="#3b42ca"
                    android:gravity="center" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/abc_ic_voice_search_api_mtrl_alpha"
                    android:onClick="SpeakClick"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
