<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OefHuiskamer"
    android:background="@drawable/background2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Klik op een onderdeel"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#ff000d"
            android:textSize="20dp"
            android:gravity="center" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imageView"
                android:background="@drawable/huiskamer"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/relativeLayout"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView"
                android:layout_alignParentBottom="true">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonKast"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="KastClick"
                    android:layout_alignTop="@+id/buttonBloemenvaas"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonBloemenvaas"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="BloemenvaasClick"
                    android:layout_above="@+id/buttonLamp"
                    android:layout_alignLeft="@+id/buttoTafel"
                    android:layout_alignStart="@+id/buttoTafel" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonKlok"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="KlokClick"
                    android:layout_marginTop="41dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/buttonLamp"
                    android:layout_toStartOf="@+id/buttonLamp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonKaars"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="KaarsClick"
                    android:layout_above="@+id/buttoTafel"
                    android:layout_toRightOf="@+id/buttoTafel"
                    android:layout_toEndOf="@+id/buttoTafel" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoel"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="StoelClick"
                    android:layout_above="@+id/buttonBank"
                    android:layout_toLeftOf="@+id/buttonLamp"
                    android:layout_toStartOf="@+id/buttonLamp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonLamp"
                    android:onClick="LampClick"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttoTafel"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="TafelClick"
                    android:layout_above="@+id/buttonBank"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="22dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonBank"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="BankClick"
                    android:layout_marginBottom="39dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/buttonKast"
                    android:layout_alignStart="@+id/buttonKast" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.25"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                android:onClick="TerugClick"
                android:padding="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:id="@+id/dutchword"
                android:padding="5dp"
                android:layout_weight="0.06"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="#ff6200"
                android:gravity="center" />
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton2"
                android:background="@android:drawable/ic_lock_silent_mode_off"
                android:onClick="SpeakClick"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
