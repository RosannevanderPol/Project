<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rosanne.nederlandsapp.MainActivity"
    android:background="#f0ae2b">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nederlands"
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textSize="60dp"
            android:textColor="#3b42ca"
            android:paddingTop="20dp"
            android:paddingBottom="50dp"/>

        <ImageView
            android:layout_width="168dp"
            android:layout_height="161dp"
            android:id="@+id/imageView2"
            android:background="@drawable/vlag"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="40dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="oefenen"
            android:id="@+id/button"
            android:onClick="OefenenClick"
            android:layout_below="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="15dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="toets"
            android:id="@+id/button2"
            android:onClick="ToetsClick"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:padding="15dp"/>

    </LinearLayout>

</RelativeLayout>
