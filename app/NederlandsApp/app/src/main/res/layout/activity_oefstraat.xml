<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".oefstraat"
    android:background="#f2bfa2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Klik op een onderdeel"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#3b42ca"
            android:textSize="20dp"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="0.25"
            android:baselineAligned="false"
            android:gravity="center"></LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="380dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/opstraat" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoep"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="StoepClick"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginBottom="22dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/buttonStoplicht"
                    android:layout_toEndOf="@+id/buttonStoplicht" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonVoetganger"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="VoetgangerClick"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_alignTop="@+id/buttonAuto"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonLantaarnpaal"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="LantaarnClick"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp"
                    android:layout_above="@+id/buttonStoplicht"
                    android:layout_toLeftOf="@+id/buttonFietser"
                    android:layout_toStartOf="@+id/buttonFietser" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonFietser"
                    android:onClick="FietserClick"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:layout_above="@+id/buttonWeg"
                    android:layout_toLeftOf="@+id/buttonStoplicht"
                    android:layout_toStartOf="@+id/buttonStoplicht"
                    android:layout_marginBottom="56dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonBoom"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="BoomClick"
                    android:layout_row="0"
                    android:layout_column="5"
                    android:layout_alignBaseline="@+id/buttonLantaarnpaal"
                    android:layout_alignBottom="@+id/buttonLantaarnpaal"
                    android:layout_alignLeft="@+id/buttonAuto"
                    android:layout_alignStart="@+id/buttonAuto" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoplicht"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="StoplichtClick"
                    android:layout_row="0"
                    android:layout_column="6"
                    android:layout_above="@+id/buttonVoetganger"
                    android:layout_toLeftOf="@+id/buttonVoetganger"
                    android:layout_toStartOf="@+id/buttonVoetganger"
                    android:layout_marginBottom="23dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonWeg"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="WegClick"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:layout_alignTop="@+id/buttonStoep"
                    android:layout_alignLeft="@+id/buttonLantaarnpaal"
                    android:layout_alignStart="@+id/buttonLantaarnpaal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonAuto"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="AutoClick"
                    android:layout_row="3"
                    android:layout_column="5"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignTop="@+id/buttonFietser"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0.25">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:onClick="TerugClick"
                    android:padding="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:id="@+id/dutchword"
                    android:padding="5dp"
                    android:layout_weight="0.06"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="#3b42ca"
                    android:gravity="center" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/abc_ic_voice_search_api_mtrl_alpha"
                    android:onClick="SpeakClick"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
