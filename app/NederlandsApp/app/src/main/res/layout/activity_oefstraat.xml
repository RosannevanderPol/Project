<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OefStraat"
    android:background="#f2bfa2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Klik op een onderdeel"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#3b42ca"
            android:textSize="20dp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imageView"
                android:background="@drawable/opstraat" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoep"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="StoepClick"
                    android:layout_alignTop="@+id/buttonWeg"
                    android:layout_toRightOf="@+id/buttonStoplicht"
                    android:layout_toEndOf="@+id/buttonStoplicht" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonVoetganger"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="VoetgangerClick"
                    android:layout_below="@+id/buttonFietser"
                    android:layout_toRightOf="@+id/buttonStoplicht"
                    android:layout_toEndOf="@+id/buttonStoplicht" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonLantaarn"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="LantaarnClick"
                    android:layout_alignTop="@+id/buttonBoom"
                    android:layout_centerHorizontal="true" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonFietser"
                    android:onClick="FietserClick"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:layout_above="@+id/buttonAuto"
                    android:layout_toRightOf="@+id/buttonWeg"
                    android:layout_toEndOf="@+id/buttonWeg" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonBoom"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="BoomClick"
                    android:layout_alignTop="@+id/buttonStoplicht"
                    android:layout_alignLeft="@+id/buttonAuto"
                    android:layout_alignStart="@+id/buttonAuto" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoplicht"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="StoplichtClick"
                    android:layout_above="@+id/buttonFietser"
                    android:layout_toRightOf="@+id/buttonFietser"
                    android:layout_toEndOf="@+id/buttonFietser"
                    android:layout_marginBottom="65dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonWeg"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="WegClick"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="39dp" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonAuto"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="AutoClick"
                    android:layout_marginBottom="31dp"
                    android:layout_above="@+id/buttonWeg"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="53dp"
                    android:layout_marginStart="53dp" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton3"
            android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:onClick="TerugClick"
            android:padding="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:id="@+id/dutchword"
            android:padding="5dp"
            android:layout_weight="0.06"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#3b42ca"
            android:gravity="center" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/abc_ic_voice_search_api_mtrl_alpha"
            android:onClick="SpeakClick"
            android:padding="5dp" />
    </LinearLayout>
</RelativeLayout>
