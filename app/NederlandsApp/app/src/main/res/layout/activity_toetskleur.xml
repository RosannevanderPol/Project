<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ToetsKleur"
    android:background="#f2bfa2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0.25"
            android:baselineAligned="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1/16"
                android:id="@+id/Teller"
                android:textColor="#ffffff"
                android:layout_weight="0.01"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Klik op: "
                android:id="@+id/textView2"
                android:textColor="#3b42ca"
                android:layout_weight="0.01"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="de lantaarnpaal"
                android:textStyle="bold"
                android:id="@+id/Dutchword"
                android:textColor="#3b42ca"
                android:layout_weight="0.07"
                android:textSize="20dp"
                android:paddingBottom="15dp"/>
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/abc_ic_voice_search_api_mtrl_alpha"
                android:onClick="SpeakClick" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonWit"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff"
                    android:onClick="WitClick" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonRood"
                    android:background="#f40d0d"
                    android:layout_centerHorizontal="true"
                    android:onClick="RoodClick"
                    android:layout_below="@+id/buttonWit" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonOranje"
                    android:layout_below="@+id/buttonRood"
                    android:layout_centerHorizontal="true"
                    android:background="#fe7b2a"
                    android:onClick="OranjeClick" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonGeel"
                    android:layout_below="@+id/buttonOranje"
                    android:background="#f2d606"
                    android:onClick="GeelClick"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonGroen"
                    android:layout_below="@+id/buttonGeel"
                    android:layout_centerHorizontal="true"
                    android:background="#52b20d"
                    android:onClick="GroenClick" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonBlauw"
                    android:onClick="BlauwClick"
                    android:background="#113ce7"
                    android:layout_below="@+id/buttonGroen" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonPaars"
                    android:layout_below="@+id/buttonBlauw"
                    android:layout_centerHorizontal="true"
                    android:background="#9042ef"
                    android:onClick="PaarsClick" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:id="@+id/buttonZwart"
                    android:layout_below="@+id/buttonPaars"
                    android:layout_centerHorizontal="true"
                    android:background="#000000"
                    android:onClick="ZwartClick" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0.25"
            android:padding="2dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton4"
                    android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:onClick="TerugClick" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView4" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/smiley" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/feedback"
                    android:textColor="#3b42ca"
                    android:layout_weight="0.01"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:paddingTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=" "
                    android:id="@+id/Nedwoord"
                    android:textSize="1sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
