<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OefKleur"
    android:background="#f0ae2b">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:weightSum="0.25"
            android:baselineAligned="false">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Klik op een onderdeel:"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_weight="0.25"
                android:textAlignment="center"
                android:textColor="#3b42ca"
                android:textSize="30dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonWit"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:onClick="WitClick"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonRood"
                android:background="#f40d0d"
                android:layout_centerHorizontal="true"
                android:onClick="RoodClick"
                android:layout_below="@+id/buttonWit" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOranje"
                android:layout_below="@+id/buttonRood"
                android:layout_centerHorizontal="true"
                android:background="#fe7b2a"
                android:onClick="OranjeClick"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGeel"
                android:layout_below="@+id/buttonOranje"
                android:layout_centerHorizontal="true"
                android:background="#f2d606"
                android:onClick="GeelClick"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGroen"
                android:layout_below="@+id/buttonGeel"
                android:layout_centerHorizontal="true"
                android:background="#52b20d"
                android:onClick="GroenClick"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBlauw"
                android:onClick="BlauwClick"
                android:background="#113ce7"
                android:layout_below="@+id/buttonGroen"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPaars"
                android:layout_below="@+id/buttonBlauw"
                android:layout_centerHorizontal="true"
                android:background="#9042ef"
                android:onClick="PaarsClick"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonZwart"
                android:layout_below="@+id/buttonPaars"
                android:layout_centerHorizontal="true"
                android:background="#000000"
                android:onClick="ZwartClick"
                />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0.25">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:onClick="TerugClick"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/dutchword"
                    android:padding="15dp"
                    android:layout_weight="0.02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="woord"
                    android:textStyle="bold"
                    android:id="@+id/dutchword"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:layout_weight="0.06"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textColor="#3b42ca" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/abc_ic_voice_search_api_mtrl_alpha"
                    android:onClick="SpeakClick"
                    android:layout_alignTop="@+id/dutchword"
                    android:layout_toRightOf="@+id/dutchword"
                    android:layout_toEndOf="@+id/dutchword"
                    android:padding="5dp"
                    android:layout_weight="0.03" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
