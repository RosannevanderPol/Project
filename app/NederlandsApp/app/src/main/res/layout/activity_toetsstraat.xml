<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ToetsStraat"
    android:background="#f2bfa2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0.25"
            android:baselineAligned="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1/16"
                android:id="@+id/Teller"
                android:textColor="#ffffff"
                android:layout_weight="0.01"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Klik op: "
                android:id="@+id/textView2"
                android:textColor="#3b42ca"
                android:layout_weight="0.01"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="de lantaarnpaal"
                android:textStyle="bold"
                android:id="@+id/Dutchword"
                android:textColor="#3b42ca"
                android:layout_weight="0.07"
                android:textSize="20dp"
                android:paddingBottom="15dp"
                android:singleLine="false" />

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/abc_ic_voice_search_api_mtrl_alpha"
                android:onClick="SpeakClick"
                 />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="380dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:background="@drawable/opstraat" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoep"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="StoepClick"
                    android:layout_below="@+id/buttonAuto"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonVoetganger"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="VoetgangerClick"
                    android:layout_below="@+id/buttonFietser"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonLantaarn"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="LantaarnClick"
                    android:layout_marginBottom="31dp"
                    android:layout_above="@+id/buttonFietser"
                    android:layout_centerHorizontal="true" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonFietser"
                    android:onClick="FietserClick"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:layout_alignBaseline="@+id/buttonAuto"
                    android:layout_alignBottom="@+id/buttonAuto"
                    android:layout_toLeftOf="@+id/buttonStoplicht"
                    android:layout_toStartOf="@+id/buttonStoplicht" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonBoom"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="BoomClick"
                    android:layout_alignBaseline="@+id/buttonStoplicht"
                    android:layout_alignBottom="@+id/buttonStoplicht"
                    android:layout_alignLeft="@+id/buttonAuto"
                    android:layout_alignStart="@+id/buttonAuto" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonStoplicht"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="StoplichtClick"
                    android:layout_above="@+id/buttonLantaarn"
                    android:layout_toLeftOf="@+id/buttonVoetganger"
                    android:layout_toStartOf="@+id/buttonVoetganger" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonWeg"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="WegClick"
                    android:layout_marginBottom="29dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/buttonFietser"
                    android:layout_toStartOf="@+id/buttonFietser"
                    android:layout_marginRight="39dp"
                    android:layout_marginEnd="39dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonAuto"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:onClick="AutoClick"
                    android:layout_marginBottom="63dp"
                    android:layout_above="@+id/buttonWeg"
                    android:layout_toLeftOf="@+id/buttonWeg"
                    android:layout_toStartOf="@+id/buttonWeg" />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="0.25">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:onClick="TerugClick" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/imageView5" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/smiley"
                    android:baselineAlignBottom="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/feedback"
                    android:textColor="#3b42ca"
                    android:layout_weight="0.01"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:paddingTop="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=" "
                    android:id="@+id/Nedwoord"
                    android:textSize="1sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
